<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size10dp"
    android:layout_marginLeft="@dimen/size10dp"
    android:layout_marginTop="@dimen/size5dp"
    android:layout_marginEnd="@dimen/size10dp"
    android:layout_marginRight="@dimen/size10dp"
    android:padding="@dimen/size10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/badgeImage"
            android:layout_width="@dimen/size100dp"
            android:layout_height="@dimen/size75dp"
            android:layout_marginEnd="@dimen/size16dp"
            android:layout_marginRight="@dimen/size16dp"
            android:contentDescription="badgeImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="@dimen/size0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size10dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/badgeImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5dp"
                android:textSize="@dimen/size10dp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>